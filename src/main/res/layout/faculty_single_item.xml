<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:elevation="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.smartcollege.aradhyakahate.smartcollege.Utils.LetterImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivLetterFaculty"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvFacultyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ivLetterFaculty"
            android:layout_alignTop="@id/ivLetterFaculty"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>




    </RelativeLayout>

</android.support.v7.widget.CardView>